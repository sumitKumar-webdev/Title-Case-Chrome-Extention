{
  "manifest_version": 3,
  "name": "Title Case Converter",
  "version": "1.1",
  "description": "Convert selected input text to Any Case",
  "icons": {
    "16": "icons/icon (3).png",
    "48": "icons/icon (2).png",
    "128": "icons/icon (1).png"
  },
  "permissions": [
    "contextMenus",
    "scripting",
    "activeTab",
    "commands"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon (3).png",
      "48": "icons/icon (2).png",
      "128": "icons/icon (1).png"
    }
  },
  "background": {
    "service_worker": "index.js"
  },
  "commands": {
    "convert-to-titlecase": {
      "suggested_key": {
        "default": "Alt + T"
      },
      "description": "Convert selected input text to Title Case"
    },

    "convert-to-uppercase": {
      "suggested_key": {
        "default": "Alt + U"
      },
      "description": "Convert selected input text to Upper Case"
    },

    "convert-to-lowercase": {
      "suggested_key": {
        "default": "Alt + S"
      },
      "description": "Convert selected input text to Lower Case"
    }
    
  }
}
